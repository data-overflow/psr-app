            on_release:
                root.manager.transition.direction = 'right'
                root.about_screen()
                
<School>
    name: 'School'

<School_Edit>
    name: 'School_Edit'
    Label:
        text: 'Edit list of schools '
        pos_hint: {'x':0.465, 'y':0.9}
        size_hint: 0.1, 0.05
        halign: 'left'
        valign: 'middle'
        
    TextInput:
        id: savechange
        pos_hint: {'x':0.01, 'y': 0.1}
        size_hint: 0.98, 0.8
        text: root.content()

    Button:
        text: 'Cancel'
        background_color: (1.0, 0.0, 0.0, 1)
        pos_hint: {'x':0.01, 'y': 0.02}
        size_hint: 0.49, 0.07
        on_release:
            root.cancel()
            root.manager.transition.direction = 'right'

    Button:
        text: 'Save'
        pos_hint: {'x':0.5, 'y': 0.02}
        size_hint: 0.49, 0.07
        on_release:
            root.done(savechange.text)
            root.manager.transition.direction = 'right'

