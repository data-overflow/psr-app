            pos_hint: {'x':0.0, 'top':1.0}
            size_hint: 0.35, 0.15
                
        Button:
            text: 'Class 9 '
            pos_hint: {'x':0.05, 'y':0.7}
            size_hint: 0.9, 0.15
            on_release:
                root.manager.transition.direction = 'left'
                root.next_screen(9)

        Button:
            text: 'Class 10 '
            pos_hint: {'x':0.05, 'y':0.5}
            size_hint: 0.9, 0.15
            on_release:
                root.manager.transition.direction = 'left'
                root.next_screen(10)
                
        Button:
            text: 'Class 11 '
            pos_hint: {'x':0.05, 'y':0.3}
