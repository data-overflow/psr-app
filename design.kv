#design.kv
<About>
    name: 'About'
    
    FloatLayout:
        Label:
            text: 'PSR APP v1.00'
            pos_hint: {'top':1.0}
            font_size: 30
               
        Label:
            text: 'Powered by PERSPECTILT'
            pos_hint: {'y':-0.1}
            #size_hint: 0.1, 0.1

        Button:
            text: 'Reset'
            background_color: (1.0, 0.0, 0.0, 1)
            pos_hint: {'x':0.01, 'y': 0.02}
            size_hint: 0.49, 0.07
            on_release:
                root.save_reset()
                root.manager.transition.direction = 'right'
            
        Button:
            text: 'Back'
            pos_hint: {'x':0.5, 'y': 0.02}
            size_hint: 0.49, 0.07
            on_release:
                root.manager.transition.direction = 'left'
                root.next_screen()
            
<Reset>
    name: 'Reset'
    FloatLayout:   
        Label:
            text: 'Reset all progress ? '
            pos_hint: {'y':0.6}
            size_hint: 1, 0.1
            font_size: 25

        Label:
            text: 'Press confirm to reset the progress of all schools and\nclasses. The process may take a few seconds...'
            pos_hint: {'x':0.05, 'y':0.5}
            size_hint: 0.9, 0.15

        Button:
            text: 'Confirm'
            background_color: (1.0, 0.0, 0.0, 1)
            pos_hint: {'x':0.01, 'y': 0.3}
            size_hint: 0.49, 0.07
            on_release:
                root.confirm()

        Button:
            text: 'Cancel'
            pos_hint: {'x':0.5, 'y': 0.3}
            size_hint: 0.49, 0.07
            on_release:
                root.cancel()
                root.manager.transition.direction = 'left'
                    
